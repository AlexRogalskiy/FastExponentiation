@page "/"
@using System.Globalization

<NumberInput @ref="@BaseInput" PlaceHolder="Type base here..." />
<NumberInput @ref="@ExponentInput" PlaceHolder="Type exponent here..." IntegerNumber="false" />
<br />
<button @onclick="Calculate">Calculate</button>
<br />
Approximate result: <b>@ApproximateResult</b>
<br />
Real result: <b>@RealResult</b>
<br />

@code {
    public NumberInput BaseInput;
    public NumberInput ExponentInput;

    public double ApproximateResult = 0;
    public double RealResult = 0;

    public void Calculate() {
        ApproximateResult = FastMath.FastPower(BaseInput.Value, ExponentInput.Value);
        RealResult = Math.Pow(BaseInput.Value, ExponentInput.Value);
    }
}

