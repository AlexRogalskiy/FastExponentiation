<textarea @bind="InputString" @bind:event="oninput" placeholder="@PlaceHolder" />

@code {
    public double Value { get; set; } = 0;
    [Parameter]
    public string PlaceHolder { get; set; } = "Type number here...";
    [Parameter]
    public bool IntegerNumber { get; set; } = false;

    private string inputString = "";
    private bool inputStringIsEmpty = true;
    private bool inputShowTrailingZeroes = false;

    private string InputString {
        get {
            if(inputStringIsEmpty) {
                return "";
            }
            return Value.ToString() + (inputShowTrailingZeroes ? "." : "");
        }
        set {
            if(double.TryParse(value, out double v)) {
                if(IntegerNumber) {
                    v = (int)v;
                } else {
                    inputShowTrailingZeroes = value.Last() == '.';
                }
                Value = v;
                inputStringIsEmpty = false;
            } else if(String.IsNullOrEmpty(value)) {
                Value = 0;
                inputShowTrailingZeroes = false;
                inputStringIsEmpty = true;
            }
        }
    }
}