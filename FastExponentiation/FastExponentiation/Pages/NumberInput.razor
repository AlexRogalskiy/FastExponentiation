<textarea @bind="InputString" @bind:event="oninput" placeholder="Type  here..." />

@code {
    [Parameter]
    public double test { get; set; };
    [Parameter] public EventCallback<double> OnValueChanged { get; set; }
    private double value = 0;
    public double Value {
        get => value;
        set {
            this.value = value;
            OnValueChanged.InvokeAsync(value);
        }
    }

    private string inputString = "";
    private bool inputShowTrailingZeroes = false;

    private string InputString {
        get {
            return Value.ToString() + (inputShowTrailingZeroes ? "." : "");
        }
        set {
            if(double.TryParse(value, out double v)) {
                Value = v;
                inputShowTrailingZeroes = value.Last() == '.';
            } else if(String.IsNullOrEmpty(value)) {
                Value = 0;
                inputShowTrailingZeroes = false;
            }
        }
    }
}